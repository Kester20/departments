<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true" />

    <package name="home" extends="struts-default,json-default" namespace="/">
        <global-results>
            <result name="error" type="json">
                <param name="statusCode">409</param>
                <param name="errorCode">40924</param>
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">^actionErrors.*,^fieldErrors.*</param>
            </result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="com.aimprosoft.noormal.exception.ValidationException" result="error"/>
        </global-exception-mappings>

        <action name="" class="" method="">
            <result name="success">/WEB-INF/index.jsp</result>
        </action>

        <action name="getAllDepartments" class="com.aimprosoft.noormal.action.department.GetAllDepartmentsAction">
            <result type="json" />
        </action>

        <action name="getTotalDepartments" class="com.aimprosoft.noormal.action.department.GetTotalDepartments">
            <result type="json" />
        </action>

        <action name="saveDepartment" class="com.aimprosoft.noormal.action.department.SaveDepartmentAction">
            <result type="json" />
        </action>

        <action name="deleteDepartment" class="com.aimprosoft.noormal.action.department.DeleteDepartment">
            <result type="json" />
        </action>

        <action name="getEmployeesByDepartment" class="com.aimprosoft.noormal.action.employee.GetEmployeesByDepartmentAction">
            <result type="json" />
        </action>

        <action name="getTotalEmployees" class="com.aimprosoft.noormal.action.employee.GetTotalEmployees">
            <result type="json" />
        </action>

        <action name="saveEmployee" class="com.aimprosoft.noormal.action.employee.SaveEmployeeAction">
            <result type="json" />
        </action>

        <action name="deleteEmployee" class="com.aimprosoft.noormal.action.employee.DeleteEmployee">
            <result type="json" />
        </action>
    </package>

</struts>